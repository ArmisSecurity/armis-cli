pipeline {
    agent any
    
    environment {
        ARMIS_API_TOKEN = credentials('armis-api-token')
    }
    
    stages {
        stage('Install Armis CLI') {
            steps {
                sh '''
                    curl -sSL https://raw.githubusercontent.com/silk-security/Moose-CLI/main/scripts/install.sh | bash
                '''
            }
        }
        
        stage('Security Scan') {
            steps {
                sh '''
                    armis scan repo . --format junit --fail-on HIGH,CRITICAL > scan-results.xml
                '''
            }
            post {
                always {
                    junit 'scan-results.xml'
                }
            }
        }
    }
    
    post {
        failure {
            echo 'Security scan found critical vulnerabilities!'
        }
    }
}
